# TickTick OAuth Credentials
# Get these from: https://developer.ticktick.com/manage
TICKTICK_CLIENT_ID=your_client_id_here
TICKTICK_CLIENT_SECRET=your_client_secret_here

# TickTick Access Tokens
# These are obtained through OAuth flow (run authentication locally first)
TICKTICK_ACCESS_TOKEN=your_access_token_here
TICKTICK_REFRESH_TOKEN=your_refresh_token_here

# Optional: TickTick API Base URL
# Default: https://api.ticktick.com/open/v1
# For Dida365 (China version): https://api.dida365.com/open/v1
TICKTICK_BASE_URL=https://api.ticktick.com/open/v1

# Optional: TickTick Token URL
# Default: https://ticktick.com/oauth/token
# For Dida365: https://dida365.com/oauth/token
TICKTICK_TOKEN_URL=https://ticktick.com/oauth/token

# Optional: MCP Server API Key
# Set this to secure your remote MCP server
# If not set, server will run without authentication (NOT recommended for production)
MCP_API_KEY=your_api_key_here

# Optional: Server Configuration
PORT=8000
HOST=0.0.0.0

